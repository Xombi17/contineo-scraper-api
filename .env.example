# Neon PostgreSQL Configuration (Python Backend)
NEON_DB_PASSWORD=your_neon_password_here
NEON_DB_URI=ep-xxxxx-xxxxx.region.aws.neon.tech
PG_DBNAME=neondb
PG_USER=neondb_owner
NEON_PASSWORDLESS_AUTH=false

# Prisma Postgres Configuration (Next.js Frontend)
# Accelerate URL (optimized for Prisma ORM)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key_here"

# Direct URL (for migrations and Python)
DIRECT_URL="postgresql://user:password@db.prisma.io:5432/postgres?sslmode=require"

# Optional: API Configuration
# API_SECRET_KEY=your_secret_key_here
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001
